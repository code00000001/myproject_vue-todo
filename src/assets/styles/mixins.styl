// 清除样式
cleanDefaultStyle()
  appearance none
  boder none
  outline none

// 样式复用c是color
btn(c, border = false)
  padding 0 10px
  border-radius 5px
  cursor pointer
  cleanDefaultStyle()

  if (border == true)
    border 1px solid c
  else
    background-color c
    color #fff

primaryBtn()
  btn(rgb(252, 157, 154))

primaryBorderBtn()
  btn(rgb(252, 157, 154), true)

infoBtn()
  btn(rgb(131, 175, 155))